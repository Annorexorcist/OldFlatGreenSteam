"resource/layout/gamespage_details_subheader_labels.layout"
{
	controls
	{
		gameplayedheader { controlname="Label" style="headertext" labeltext="#steam_details_lastplayedheader" zpos="2" }
		totalplaytimeheader { controlname="Label" style="headertext" labeltext="#steam_details_totalplaytimeheader_minutes" zpos="2" }
	}

	styles
	{
		headertext
		{
			padding-left=0
			padding-bottom=1
			padding-top=0
			font-size=16
			textcolor=Text
			font-style=uppercase;
		}
	}

	layout
	{
		region { name="subheaderlabels" y=0 x=0 width=max height=max }

		place { 
			control=totalplaytimeheader,gameplayedheader
			region=subheaderlabels
			dir=down
		}
	}
}
